<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" stylesheets="@login.css" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.blackandwhite.grey.login.ControllerLogin">
   <children>
      <TextField fx:id="userField" alignment="CENTER" layoutX="50.0" layoutY="250.0" prefHeight="50.0" prefWidth="300.0" promptText="Username">
         <font>
            <Font size="14.0" />
         </font></TextField>
      <PasswordField fx:id="passField" alignment="CENTER" layoutX="50.0" layoutY="325.0" prefHeight="50.0" prefWidth="300.0" promptText="Password">
         <font>
            <Font size="14.0" />
         </font></PasswordField>
      <Button layoutX="50.0" layoutY="400.0" mnemonicParsing="false" onAction="#login" prefHeight="50.0" prefWidth="300.0" styleClass="login" text="Login">
         <font>
            <Font size="14.0" />
         </font></Button>
      <ImageView fitWidth="250.0" layoutX="75.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../assets/logo.png" />
         </image>
      </ImageView>
      <HBox alignment="CENTER_RIGHT" onMouseDragged="#menubarDragged" onMousePressed="#menubarPressed" prefHeight="50.0" prefWidth="400.0">
         <children>
            <Button mnemonicParsing="false" onAction="#close" styleClass="close" text="x">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
